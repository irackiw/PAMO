<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".RecipesActivity">

    <TextView
        android:id="@+id/form_quiz_score"
        android:layout_width="280dp"
        android:layout_height="72dp"
        android:layout_marginHorizontal="50dp"
        android:layout_marginVertical="10dp"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textSize="26sp" />

    <TextView
        android:id="@+id/form_quiz_question"
        android:layout_width="280dp"
        android:layout_height="72dp"
        android:layout_marginHorizontal="50dp"
        android:layout_marginVertical="10dp"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textSize="26sp" />

    <Button
        android:id="@+id/aResponse"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="50dp"
        android:background="@drawable/btn_bg"
        android:textColor="#fafafa"
        android:visibility="invisible" />

    <Button
        android:id="@+id/bResponse"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="50dp"
        android:background="@drawable/btn_bg"
        android:textColor="#fafafa"
        android:visibility="invisible" />

    <Button
        android:id="@+id/cResponse"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="50dp"
        android:background="@drawable/btn_bg"
        android:textColor="#fafafa"
        android:visibility="invisible" />

    <Button
        android:id="@+id/dResponse"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="50dp"
        android:background="@drawable/btn_bg"
        android:textColor="#fafafa"
        android:visibility="invisible" />

    <Button
        android:id="@+id/start"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="50dp"
        android:background="@drawable/btn_bg"
        android:onClick="start"
        android:text="@string/form_quiz_start"
        android:textColor="#fafafa" />

    <Button
        android:id="@+id/back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="50dp"
        android:background="@drawable/btn_bg"
        android:onClick="onButtonClick"
        android:text="@string/form_back"
        android:textColor="#fafafa" />

</LinearLayout>